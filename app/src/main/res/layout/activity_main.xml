<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.northeastern.numad22fa_suhaaniagarwal.MainActivity" >
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="displayToastMsg"
    android:text="About Me!" />
    <TextView
        android:id="@+id/textView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Hello World!"
        android:textSize="25sp"
        android:textColor="#f00"
        android:layout_centerHorizontal="true"
        android:onClick="textMessage"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickActivity"
        android:layout_margin="130dp"
        android:text="Clicky Clicky" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="linkCollector"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="125dp"
        android:text="Link Collector" />

    <Button
        android:id="@+id/primeDirective"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/button1"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="243dp"
        android:onClick="primeDirective"
        android:text="Prime Directive" />

    <Button
        android:id="@+id/btn_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/primeDirective"
        android:layout_marginBottom="-103dp"
        android:layout_marginStart="130dp"
        android:onClick="locationUpdate"
        android:text="Location"
        android:textSize="15sp" />
</RelativeLayout>